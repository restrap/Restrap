<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="xero_country_form_view" model="ir.ui.view">
        <field name="name">res.country.form.inherit</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="alias_ids"/>
            </xpath>
        </field>
    </record>
    <record id="xero_country_alias_form_view" model="ir.ui.view">
        <field name="name">res.country.alias.form</field>
        <field name="model">res.country.alias</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="country_id" invisible="1"/>
                </group>
            </form>
        </field>
    </record>
</odoo>