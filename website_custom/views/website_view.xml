<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="website_view_form_custom" model="ir.ui.view">
        <field name="name">website.form.view</field>
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_form"/>
        <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="allow_out_of_stock_order"/>
                    <field name="website_suffix"/>
                </xpath>
               
            </field>
        </record>
        
        <record id="view_res_config_settings_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website_sale_stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allow_out_of_stock_order']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
</odoo>

