<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_signup_user_approve" model="mail.template">
            <field name="name">Account Confirmation Email: Send by email</field>
            <field name="model_id" ref="base.model_res_users" />
            <field name="email_from">${object.company_id.partner_id.email_formatted |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">${object.company_id.name} Account Confirmation Email</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <h2 align="center">Account Confirmation</h2>
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello ${object.name},
                        <br />
                        <br />
                        Your account has been approved by administrator.
                        <br />
                        <br />
                        Thank you.
                    </p>
                </div>
            </field>
        </record>
        <record id="sh_signup_user_reject" model="mail.template">
            <field name="name">Account Confirmation Email: Send by email</field>
            <field name="model_id" ref="base.model_res_users" />
            <field name="email_from">${object.company_id.partner_id.email_formatted |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">${object.company_id.name} Account Confirmation Email</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <h2 align="center">Account Confirmation</h2>
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello ${object.name},
                        <br />
                        <br />
                        Your account has been rejected by administrator.
                        <br />
                        <br />
                        Thank you.
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
