<odoo>
    <data>
        <template id="portal_my_home_pricelist_breadcrumbs" inherit_id="portal.portal_breadcrumbs" priority="20">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'product_pricelist'" class="breadcrumb-item">
                    <t>Product Pricelist</t>
                </li>
            </xpath>
        </template>

        <template id="portal_my_home_pricelist" name="Portal My Home : Product pricelist"
                  inherit_id="portal.portal_my_home"
                  priority="20">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <t t-if="request.env.user.partner_id.allow_pricelist_download" t-call="portal.portal_docs_entry">
                    <t t-set="title">Product Pricelist Download</t>
                    <t t-set="url" t-value="'/my/product-pricelist'"/>
                    <!--                   -->
                </t>

            </xpath>
        </template>

        <template id="portal_product_pricelist_page" name="Pricelist Download">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Pricelist Download</t>
                </t>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card " styles="width: 18rem;">
                                <div class="card-body">
                                    <h3 class="card-title text-center">
                                        <b>Download Product Pricelist</b>
                                    </h3>
                                    <h6 class="card-subtitle mb-2 text-muted text-center">Get special prices according
                                        to your pricelist
                                    </h6>
                                    <div class="card-text my-3">
                                        <form action="/customer/pricelist" method="POST">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <div class="form-group">
                                                <label for="pricelist_file_type">File Type</label>
                                                <select class="form-control" id="pricelist_file_type" required=""
                                                        name="pricelist_file_type">
                                                    <option selected="" value="">--SELECT--</option>
                                                    <option value="pdf">PDF</option>
                                                    <option value="excel">Excel</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="pricelist_file_type">Product Category (Optional)</label>
                                                <select class="form-control" id="pricelist_product_categ"
                                                        name="pricelist_product_categ">
                                                    <option selected="" value="">--SELECT--</option>
                                                    <t t-foreach="ecom_categories" t-as="categ">
                                                        <option t-att-value="categ['id']">
                                                            <t t-esc="categ['name']"/>
                                                        </option>
                                                    </t>
                                                </select>
                                                <small class="form-text text-muted">
                                                    All products will be included in the pricelist, if category is not
                                                    selected.
                                                </small>
                                            </div>

                                            <button type="submit" class="btn btn-primary">
                                                <i class="fa fa-download"/>
                                                Download Pricelist
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>