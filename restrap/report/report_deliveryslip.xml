<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_delivery_document_restrap_inherit" inherit_id="stock.report_delivery_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="before">
                <t t-set="delivery_slip_report" t-value="True"/>
            </xpath>
            <xpath expr="//table[@name='stock_move_table']//th[@name='th_sm_quantity']" position="before">
                <th name="th_sum_weight">
                    <strong>Sum of Weight</strong>
                </th>
                <th name="th_item_weight">
                    <strong>Item Weight</strong>
                </th>
            </xpath>

            <xpath expr="//table[@name='stock_move_table']//th[@name='th_sm_quantity']" position="after">
                <th name="th_origin">
                    <strong>Origin</strong>
                </th>
            </xpath>

            <xpath expr="//table[@name='stock_move_table']//th[@name='th_sm_ordered']" position="replace">
            </xpath>

            <xpath expr="//table[@name='stock_move_table']//span[@t-field='move.product_uom_qty']/parent::td"
                   position="before">
                <td>
                    <span t-esc="move.quantity_done * move.product_id.weight"
                          t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>
                </td>
                <td t-if="move.product_id.weight">
                    <span t-esc="move.product_id.weight"
                          t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>
                </td>
                <td t-else="">
                    <span>0</span>
                </td>
            </xpath>

            <xpath expr="//table[@name='stock_move_line_table']//th[@name='th_sml_quantity']" position="before">
                <th name="th_sum_weight" class="text-center">
                    <strong>Sum of Weight</strong>
                </th>
                <th name="th_item_weight" class="text-center">
                    <strong>Item Weight</strong>
                </th>
            </xpath>

            <xpath expr="//table[@name='stock_move_line_table']//th[@name='th_sml_qty_ordered']" position="replace">
            </xpath>

            <xpath expr="//table[@name='stock_move_line_table']//th[@name='lot_serial']" position="replace">
                <th name="lot_serial" t-if="has_serial_number">
                    Lot/Serial Number
                </th>
            </xpath>
            <!--            <xpath expr="//table[@name='stock_move_line_table']//th[@name='th_sml_qty_ordered']" position="replace">-->
            <!--                <t t-if="not has_serial_number">-->
            <!--                    <th name="lot_serial">-->
            <!--                        Lot/Serial Number-->
            <!--                    </th>-->
            <!--                </t>-->
            <!--            </xpath>-->


            <xpath expr="//div[@name='div_outgoing_address']" position="replace">
                <div t-if="o.picking_type_code != 'outgoing'" class="col-6" name="div_outgoing_address">
                    <div t-if="o.move_ids_without_package and o.move_ids_without_package[0].partner_id and o.move_ids_without_package[0].partner_id.id != o.partner_id.id">
                        <span>
                            <strong>Delivery Address:</strong>
                        </span>
                        <div t-field="o.move_ids_without_package[0].partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    </div>
                    <div t-if="o.picking_type_id.code != 'internal' and (not o.move_ids_without_package or not o.move_ids_without_package[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                        <span>
                            <strong>Warehouse Address:</strong>
                        </span>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    </div>
                </div>
            </xpath>


            <xpath expr="//div[@name='partner_header']" position="replace">
                <div t-if="partner and not o.picking_type_id.code=='outgoing'" name="partner_header">
                    <div t-field="partner.commercial_partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    <p t-if="partner.sudo().commercial_partner_id.vat"><t
                            t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>:
                        <span t-field="partner.sudo().commercial_partner_id.vat"/>
                    </p>
                </div>
            </xpath>

            <xpath expr="//table[@name='stock_move_line_table']" position="attributes">
                <attribute name="t-if">o.move_line_ids.filtered(lambda l: not l.result_package_id) and o.state=='done'
                </attribute>
            </xpath>

            <xpath expr="//table[@name='stock_move_line_table']/tbody/t[@name='has_packages']" position="replace">
                <!-- If printing lots/serial numbers => keep products in original lines -->
                <t t-if="has_serial_number">
                    <tr t-foreach="o.move_line_ids.filtered(lambda l: not l.result_package_id)" t-as="move_line">
                        <t t-call="stock.stock_report_delivery_has_serial_move_line"/>
                    </tr>
                </t>
                <!-- If not printing lots/serial numbers => merge lines with same product -->
                <t t-else="" name="aggregated_move_lines">
                    <t t-set="aggregated_lines"
                       t-value="o.move_line_ids.filtered(lambda l: not l.result_package_id)._get_aggregated_product_quantities()"/>
                    <t t-call="stock.stock_report_delivery_aggregated_move_lines"/>
                </t>
            </xpath>

            <xpath expr="//table[@name='stock_move_line_table']" position="before">
                <t t-if="o.move_line_ids and o.state=='done' and o.has_packages" name="has_packages">
                    <t t-set="packages" t-value="o.move_line_ids.mapped('result_package_id')"/>
                    <t t-foreach="packages" t-as="package">
                        <t t-set="package_items"
                           t-value="o.move_line_ids.filtered(lambda l: l.result_package_id == package)"/>
                        <t t-set="package_total_weight" t-value="sum(package_items.mapped('total_weight'))"/>
                        <div t-if="o.has_packages" class="row mt32 mb32">
                            <div t-if="o.origin" class="col-auto" name="div_origin">
                                <strong>Order:</strong>
                                <p t-field="o.origin"/>
                            </div>
                            <div t-if="o.state" class="col-auto" name="div_sched_date">
                                <strong>Shipping Date:</strong>
                                <t t-if="o.state == 'done'">
                                    <p t-field="o.date_done"/>
                                </t>
                                <t t-if="o.state != 'done'">
                                    <p t-field="o.scheduled_date"/>
                                </t>
                            </div>
                            <div class="col-auto">
                                <strong>Total Weight:</strong>
                                <p t-esc="package_total_weight"
                                   t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>
                            </div>
                        </div>
                        <table class="table table-sm mt48" name="stock_move_line_table_packages">
                            <t t-set="has_serial_number" t-value="False"/>
                            <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')"
                               groups="stock.group_lot_on_delivery_slip"/>
                            <thead>
                                <tr>
                                    <th name="th_sml_product">
                                        <strong>Product</strong>
                                    </th>
                                    <t name="lot_serial" t-if="has_serial_number">
                                        <th>
                                            Lot/Serial Number
                                        </th>
                                    </t>
                                    <th name="th_sum_weight" class="text-center">
                                        <strong>Sum of Weight</strong>
                                    </th>
                                    <th name="th_item_weight" class="text-center">
                                        <strong>Item Weight</strong>
                                    </th>
                                    <th name="th_sml_quantity" class="text-center">
                                        <strong>Delivered</strong>
                                    </th>
                                    <th t-if="has_hs_code">
                                        <strong>HS Code</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Origin</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-call="stock.stock_report_delivery_package_section_line"/>
                                <t t-set="package_move_lines"
                                   t-value="o.move_line_ids.filtered(lambda l: l.result_package_id == package)"/>
                                <!-- If printing lots/serial numbers => keep products in original lines -->
                                <t t-if="has_serial_number">
                                    <tr t-foreach="package_move_lines" t-as="move_line">
                                        <t t-call="stock.stock_report_delivery_has_serial_move_line"/>
                                    </tr>
                                </t>
                                <!-- If not printing lots/serial numbers => merge lines with same product+description+uom -->
                                <t t-else="">
                                    <t t-set="aggregated_lines"
                                       t-value="package_move_lines._get_aggregated_product_quantities(strict=True)"/>
                                    <t t-call="stock.stock_report_delivery_aggregated_move_lines"/>
                                </t>
                                <!-- Make sure we do another section for package-less products if they exist -->
                                <t t-set="move_lines"
                                   t-value="o.move_line_ids.filtered(lambda l: not l.result_package_id)"/>
                                <t t-set="aggregated_lines"
                                   t-value="o.move_line_ids._get_aggregated_product_quantities(except_package=True)"/>
                                <t t-if="move_lines or aggregated_lines" name="no_package_move_lines">
                                    <t t-call="stock.stock_report_delivery_no_package_section_line"
                                       name="no_package_section"/>
                                    <t t-if="has_serial_number">
                                        <tr t-foreach="move_lines" t-as="move_line">
                                            <t t-call="stock.stock_report_delivery_has_serial_move_line"/>
                                        </tr>
                                    </t>
                                    <t t-elif="aggregated_lines">
                                        <t t-call="stock.stock_report_delivery_aggregated_move_lines"/>
                                    </t>
                                </t>
                                <!-- No destination packages -->
                                <t t-else="">
                                    <!-- If printing lots/serial numbers => keep products in original lines -->
                                    <t t-if="has_serial_number">
                                        <tr t-foreach="o.move_line_ids" t-as="move_line">
                                            <t t-call="stock.stock_report_delivery_has_serial_move_line"/>
                                        </tr>
                                    </t>
                                    <!-- If not printing lots/serial numbers => merge lines with same product -->
                                    <t t-else="" name="aggregated_move_lines">
                                        <t t-set="aggregated_lines"
                                           t-value="o.move_line_ids._get_aggregated_product_quantities()"/>
                                        <t t-call="stock.stock_report_delivery_aggregated_move_lines"/>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <p style="page-break-after:always;"></p>
                    </t>
                </t>
            </xpath>

        </template>

        <template id="report_delivery_document2_restrap_inherit" inherit_id="stock_delivery.report_delivery_document2">
            <xpath expr="//p[@t-field='o.carrier_id']/parent::div" position="replace">
            </xpath>
            <xpath expr="//span[@t-field='o.shipping_weight']/parent::div" position="replace">
                <div t-if="o.shipping_weight and not o.has_packages" class="col-auto">
                    <strong>Total Weight:</strong>
                    <br/>
                    <span t-field="o.shipping_weight"/>
                    <span t-field="o.weight_uom_name"/>
                </div>
            </xpath>

            <xpath expr="//div[@class='row mt32 mb32']" position="replace">
                <div t-if="not o.has_packages" class="row mt32 mb32">
                    <div t-if="o.origin" class="col-auto" name="div_origin">
                        <strong>Order:</strong>
                        <p t-field="o.origin"/>
                    </div>
                    <div t-if="o.state" class="col-auto" name="div_sched_date">
                        <strong>Shipping Date:</strong>
                        <t t-if="o.state == 'done'">
                            <p t-field="o.date_done"/>
                        </t>
                        <t t-if="o.state != 'done'">
                            <p t-field="o.scheduled_date"/>
                        </t>
                    </div>
                </div>
                <t t-set="has_hs_code" t-value="o.move_ids.filtered(lambda l: l.product_id.hs_code)"/>
            </xpath>
            <xpath expr="//th[@t-if='has_hs_code']" position="after">
                <th name="th_origin">
                    <strong>Origin</strong>
                </th>
            </xpath>
        </template>

        <template id="stock_report_delivery_aggregated_move_lines_restrap_inherit"
                  inherit_id="stock.stock_report_delivery_aggregated_move_lines">
            <xpath expr="//td[@name='move_line_aggregated_qty_ordered']" position="replace">
            </xpath>
            <xpath expr="//td[@class='text-center' and @name='move_line_aggregated_quantity']" position="before">
                <td class="text-center">
                    <span t-esc="aggregated_lines[line]['quantity'] * aggregated_lines[line]['product']['weight']"
                          t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>
                </td>
                <td t-if="aggregated_lines[line]['product']['weight']" class="text-center">
                    <span t-esc="aggregated_lines[line]['product']['weight']"
                          t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>
                </td>
                <td t-else="">
                    <span>0</span>
                </td>
            </xpath>
        </template>

        <template id="stock_report_delivery_aggregated_move_lines_inherit_delivery_restrap_inherit"
                  inherit_id="stock_delivery.stock_report_delivery_aggregated_move_lines_inherit_delivery">
            <xpath expr="//td[@t-if='has_hs_code']" position="after">
                <td t-if="aggregated_lines[line]['product']['origin_country_id']">
                    <span t-esc="aggregated_lines[line]['product']['origin_country_id']['name']"/>
                </td>
            </xpath>
        </template>

        <template id="stock_report_delivery_package_section_line_inherit_delivery_restrap_inherit"
                  inherit_id="stock_delivery.stock_report_delivery_package_section_line_inherit_delivery">
            <xpath expr="//t[@t-if='package.shipping_weight or package.weight']" position="replace">
            </xpath>
        </template>


    </data>
</odoo>