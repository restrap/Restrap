<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="external_layout_standard_inherit_restrap" inherit_id="web.external_layout_standard">
            <xpath expr="//img" position="replace">
                <t t-if="company.logo and o._name == 'stock.picking' and o.picking_type_code == 'outgoing'">
                    <img t-att-src="image_data_uri(company.logo)" style="max-height: 20px;" alt="Logo"/>
                </t>
                <t t-else="">
                    <img t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                </t>
            </xpath>
            <xpath expr="//div[@name='company_address']" position="after">
                <div t-if="o.partner_id and o._name == 'stock.picking' and o.picking_type_code == 'outgoing' and delivery_slip_report" class="col-6" style="font-size:12px;">
                  <strong>Customer Name:</strong>
                  <p t-field="o.partner_id.name"/>
                </div>
            </xpath>

            <xpath expr="//div[@name='company_address']" position="replace">
                <div t-if="not delivery_slip_report" class="col-6" name="company_address">
                    <div t-field="company.partner_id" t-options="{'widget': 'contact', 'fields': ['address'], 'no_marker': True}"/>
                    <t t-if="company.vat">
                        <span>VAT: <span t-field="company.vat"/></span> <br/>
                    </t>
                    <span t-if="company.eori">EORI: <span t-field="company.eori"/></span>
                </div>
                <div t-if="show_barcode and not delivery_slip_report" class="col-6" name="company_address" style="padding-top: 25px;">
                    <t t-if="doc.name">
                       <div t-out="doc.name" style="padding:0" t-options="{'widget': 'barcode', 'width': 600, 'height': 100}"/>
                    </t>
                </div>
            </xpath>

            <xpath expr="//div[@name='moto']" position="replace">
                <div t-if="o._name == 'stock.picking' and o.picking_type_code == 'outgoing'" class="col-9 text-right" style="margin-top:22px; font-size:12px;" t-field="company.report_header" name="moto"/>
                <div t-else="" class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </xpath>
            <xpath expr="//div[@class='pt-5']" position="replace">
                <div t-if="o._name == 'stock.picking' and o.picking_type_code == 'outgoing'">
                    <!-- This div ensures that the address is not cropped by the header. -->
                    <t t-call="web.address_layout"/>
                </div>
                <div t-else="" class="pt-5">
                    <t t-call="web.address_layout"/>
                </div>
            </xpath>
            <xpath expr="//ul[@class='list-inline mb4']" position="replace">
                 <ul t-if="not delivery_slip_report" class="list-inline mb4">
                    <div t-field="company.report_footer"/>
                </ul>
            </xpath>
        </template>

    </data>
</odoo>