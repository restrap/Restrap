<odoo>
    <template id="report_mrporder_restrap" inherit_id="mrp.report_mrporder">
        <xpath expr="//table[@t-if='o.move_raw_ids']" position="after">
            <h3>
                <span>Notes</span>
            </h3>
            <div>
                <strong>Cutting:</strong><br/>
                <span t-field="o.bom_id.cutting_notes"/></div>
            <br/>
            <div>
                <strong>Sewing:</strong><br/>
                <span t-field="o.bom_id.sewing_notes"/></div>
            <br/>
            <div>
                <strong>Packing:</strong><br/>
                <span t-field="o.bom_id.packing_notes"/>
            </div>
        </xpath>

        <xpath expr="//div[@class='page']/div[3]" position="replace">
            <div>
                <table width="60%" style="margin-left:auto;margin-right:auto;">
                    <tr>
                        <td width="20%">
                            <strong>Product:</strong>
                        </td>
                        <td width="10%">
                            <strong>Quantity:</strong>
                        </td>
                        <td width="10%">
                            <strong>Reference:</strong>
                        </td>
                        <td width="20%">
                            <strong>Planned Week:</strong>
                        </td>
                    </tr>
                    <tr>
                        <td width="20%">
                            <strong><span t-field="o.product_id"/></strong>
                        </td>
                        <td width="10%">
                            <span t-field="o.product_qty"/>
                        </td>
                        <td width="10%">
                            <span t-field="o.reference"/>
                        </td>
                        <td width="20%">
                            <span t-field="o.planned_week"/>
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>

        <xpath expr="//div[@class='page']/div[4]" position="replace">
            <div></div>
        </xpath>

        <xpath expr="//div[@class='page']/h3[@t-if='o.move_raw_ids']" position="replace">
            <h3></h3>
        </xpath>

        <xpath expr="//div[@class='page']/table[@t-if='o.move_raw_ids']" position="replace">
            <table></table>
        </xpath>

        <xpath expr="//div[@class='page']/div[5]" position="replace">
            <div t-if="o.workorder_ids" groups="mrp.group_mrp_routings">
                    <h3 class="text-center">
                        <span t-if="o.state == 'done'">Operations Done</span>
                        <span t-else="">Operations Planned</span>
                    </h3>
                <table class="center" width="40%" style="margin-left:auto;margin-right:auto;">
                    <tr>
                        <td width="20%">
                            <strong>WorkCenter</strong>
                        </td>
                        <td width="20%">
                            <strong>No. Of Minutes</strong>
                        </td>
                    </tr>
                    <tr t-foreach="o.workorder_ids" t-as="line2">
                        <td width="20%">
                            <span t-field="line2.workcenter_id.name"/>
                        </td>
                        <td width="20%">
                            <span t-if="o.state != 'done'" t-field="line2.duration_expected"/>
                            <span t-if="o.state == 'done'" t-field="line2.duration"/>
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>
    </template>


    <template id="label_production_view_pdf_restrap" inherit_id="mrp.label_production_view_pdf">
        <xpath expr="//div[@class='page']" position="replace">
            <t t-set="uom_categ_unit" t-value="env.ref('uom.product_uom_categ_unit')"/>
            <t t-foreach="docs" t-as="production">
                <t t-if="production.product_id.tracking == 'none'">
                    <t t-if="production.product_qty">
                        <t t-set="qty" t-value="int(production.product_qty)"/>
                    </t>
                    <t t-else="">
                        <t t-set="qty" t-value="1"/>
                    </t>
                    <t t-foreach="range(qty)" t-as="item">
                        <div class="page" style="page-break-before: always">
                            <t t-translation="off">
                                <style>
                                    body {
                                    font-size: 0.78rem;
                                    }
                                </style>
                                <div style="display: inline-table; height: 3cm; width:100%;">
                                    <table class="table table-bordered" style="border: 2px solid black;">
                                        <tr>
                                            <th class="table-active text-center">
                                                <t t-if="production.product_id.default_code">
                                                    [
                                                    <span t-esc="production.product_id.default_code"/>
                                                    ]
                                                </t>
                                                <t t-else="">
                                                    <span class="text-muted">No Internal Reference available</span>
                                                </t>
                                                <br/>
                                            </th>
                                        </tr>
                                        <t t-if="production.product_id.tracking == 'none'">
                                            <tr>
                                                <td class="text-center align-middle">
                                                    <t t-if="production.product_id.barcode">
                                                        <div t-field="production.product_id.barcode"
                                                             t-options="{'widget': 'barcode', 'width': 600, 'height': 150, 'img_style': 'width:100%;height: 1cm'}"/>
                                                        <span t-esc="production.product_id.barcode"/>
                                                    </t>
                                                    <t t-else="">
                                                        <span class="text-muted">No barcode available</span>
                                                    </t>
                                                </td>
                                            </tr>
                                        </t>
                                    </table>

                                </div>
                            </t>
                        </div>
                    </t>
                </t>
                <t t-if="production.product_id.tracking != 'none'">
                    <t t-foreach="production.move_finished_ids" t-as="move">
                        <t t-if="production.state == 'done'">
                            <t t-set="move_lines"
                               t-value="move.move_line_ids.filtered(lambda x: x.state == 'done' and x.qty_done)"/>
                        </t>
                        <t t-else="">
                            <t t-set="move_lines"
                               t-value="move.move_line_ids.filtered(lambda x: x.state != 'done' and x.product_qty)"/>
                        </t>
                        <t t-foreach="move_lines" t-as="move_line">
                            <t t-if="move_line.product_uom_id.category_id == uom_categ_unit">
                                <t t-set="qty" t-value="int(move_line.qty_done)"/>
                            </t>
                            <t t-else="">
                                <t t-set="qty" t-value="1"/>
                            </t>
                            <t t-foreach="range(qty)" t-as="item">
                                <div class="page" style="page-break-before: always">
                                    <t t-translation="off">
                                        <div style="display: inline-table; height: 3cm; width:100%;">
                                            <table class="table table-bordered" style="border: 2px solid black;"
                                                   t-if="production.move_finished_ids">
                                                <tr>
                                                    <th class="table-active text-center" style="height:2rem;">
                                                        [
                                                        <span t-esc="move_line.product_id.default_code"/>
                                                        ]
                                                        <br/>
                                                    </th>
                                                </tr>
                                                <t t-if="move_line.product_id.tracking != 'none'">
                                                    <tr>
                                                        <td class="text-center align-middle">
                                                            <t t-if="move_line.lot_name or move_line.lot_id">
                                                                <div t-field="move_line.lot_name or move_line.lot_id.name"
                                                                     t-options="{'widget': 'barcode', 'width': 600, 'height': 150, 'img_style': 'width:100%;height: 1cm'}"/>
                                                                <span t-esc="move_line.lot_name or move_line.lot_id.name"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span class="text-muted">No barcode available</span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t t-if="move_line.product_id.tracking == 'none'">
                                                    <tr>
                                                        <td class="text-center align-middle" style="height: 6rem;">
                                                            <t t-if="move_line.product_id.barcode">
                                                                <div t-field="move_line.product_id.barcode"
                                                                     t-options="{'widget': 'barcode', 'width': 600, 'height': 150, 'img_style': 'width:100%;height:4rem'}"/>
                                                                <span t-esc="move_line.product_id.barcode"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span class="text-muted">No barcode available</span>
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </table>
                                        </div>
                                    </t>
                                </div>
                            </t>
                        </t>
                    </t>
                </t>
            </t>

        </xpath>
    </template>

    <record id="paperformat_product_label" model="report.paperformat">
        <field name="name">Product label custom</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">32</field>
        <field name="page_width">57</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">1</field>
        <field name="margin_bottom">1</field>
        <field name="margin_left">1</field>
        <field name="margin_right">1</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">300</field>
    </record>

    <record id="mrp.action_report_finished_product" model="ir.actions.report">
        <field name="paperformat_id" ref="restrap.paperformat_product_label"/>
    </record>

</odoo>