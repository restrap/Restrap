<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Gantt View-->
    <record id="workcenter_line_gantt_production_inherit" model="ir.ui.view">
        <field name="name">mworkcenter.line.gantt.production.inherit</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_workorder_view_gantt"/>
        <field name="arch" type="xml">
            <xpath expr="//gantt" position="attributes">
                <attribute name="color">restrap_plan_id</attribute>
            </xpath>
        </field>
    </record>
    <!-- Inherits search in Operations->Work Orders -->
    <record id="mrp_workorder_filter_inherit_restrap" model="ir.ui.view">
        <field name="name">MRP Work Order Filter View Restrap</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_workorder_form_view_filter"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="before">
          <xpath expr="//field[@name='production_id']" position="move"/>
        </xpath>

        </field>
    </record>

</odoo>
