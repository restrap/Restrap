<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="mrp_bom_form_view_view_restrap" model="ir.ui.view">
            <field name="name">mrp_bom_form_view_restrap</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='miscellaneous']" position="before">
                    <page string="Notes" name="notes">
                        <group>
                            <field name="cutting_notes"/>
                            <field name="sewing_notes"/>
                            <field name="packing_notes"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>