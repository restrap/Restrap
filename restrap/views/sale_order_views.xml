<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="sale_order_form_inherit_view" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="merged"/>
            </xpath>
        </field>
    </record>

    <!-- Quotations List View -->
    <record id="quotation_tree_inherit_view" model="ir.ui.view">
        <field name="name">sale.order.quotation.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-primary">merged</attribute>
            </xpath>
            <xpath expr="//field[@name='activity_ids']" position="after">
                <field name="merged"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="priority" optional="show" widget="priority" nolabel="1"/>
            </xpath>
        </field>
    </record>

    <!-- Sales Orders List View -->
    <record id="sale_order_tree_inherit_view" model="ir.ui.view">
        <field name="name">sale.order.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-primary">merged</attribute>
            </xpath>
            <xpath expr="//field[@name='activity_ids']" position="after">
                <field name="merged"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="priority" optional="show" widget="priority" nolabel="1"/>
            </xpath>
        </field>
    </record>

    <!-- Quotations Search View -->
    <record id="sale_order_quotation_view_search_inherit_quotation" model="ir.ui.view">
        <field name="name">sale.order.quotation.search.inherit.quotation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_quotation']" position="after">
                <filter string="Starred" name="urgent_priority" domain="[('priority','=', '1')]"/>
            </xpath>
        </field>
    </record>

    <!-- Sales Orders Search View -->
    <record id="sale_order_view_search_inherit_quotation" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.quotation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_sale"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <filter string="Starred" name="urgent_priority" domain="[('priority','=', '1')]"/>
            </xpath>
        </field>
    </record>

</odoo>
