<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="external_layout_standard" inherit_id="web.external_layout_standard" name="external_layout_standard_restrap">
        <xpath expr="//div[@name='company_address']" position="replace">
            <div class="col-6" name="company_address">
                <div t-field="company.partner_id" t-options="{'widget': 'contact', 'fields': ['address'], 'no_marker': True}"/>
                <t t-if="company.vat">
                    <span>VAT: <span t-field="company.vat"/></span> <br/>
                </t>
                <span t-if="company.eori">EORI: <span t-field="company.eori"/></span>
            </div>
            <div t-if="show_barcode" class="col-6" name="company_address" style="padding-top: 25px;">
                <t t-if="doc.name">
                   <div t-out="doc.name" style="padding:0" t-options="{'widget': 'barcode', 'width': 600, 'height': 100}"/>
                </t>
            </div>
        </xpath>
    </template>
</odoo>