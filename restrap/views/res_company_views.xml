<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_company_form_restrap" model="ir.ui.view">
            <field name="name">res.company.form.restrap</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <!-- Add ORI field to company form view -->
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="eori"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>